<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_primary30"
            android:backgroundTintMode="src_over"
            android:foregroundTint="@color/material_dynamic_primary30"
            android:foregroundTintMode="src_over"
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:tint="@color/material_dynamic_primary30"
            android:tintMode="src_in" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/emailAddressTx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Address: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailSubjectTx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject:" />

        <TextView
            android:id="@+id/emailBodyTx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message:" />

        <com.google.android.material.chip.Chip
            android:id="@+id/emailTypeChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Home"
            app:chipIcon="@drawable/ic_baseline_home_30"
            app:chipIconTint="?attr/elevationOverlayColor"
            app:chipIconVisible="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/EmailSendButton"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send Email"
                app:icon="@drawable/ic_baseline_send_30" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/CopyButton"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy Email Id"
                app:icon="@drawable/ic_baseline_content_copy_30" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>